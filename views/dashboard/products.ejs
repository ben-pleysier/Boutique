<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="products" appConnect="local" components="{dmxDataTraversal:{},dmxBootstrap5Modal:{},dmxTagify:{},dmxFormatter:{},dmxBootstrap5TableGenerator:{}}" -->
<dmx-serverconnect id="serverconnectCategories" url="/api/products/categories/read"></dmx-serverconnect>
<dmx-data-view id="data_viewCategory" dmx-bind:data="serverconnectCategories.data.queryCategories" filter="(id == searchCategory.value)"></dmx-data-view>
<dmx-serverconnect id="serverconnectProducts" url="/api/products/products/read"></dmx-serverconnect>
<dmx-data-view id="data_viewProducts" dmx-bind:data="serverconnectProducts.data.queryProducts" filter="(category_id == searchCategory.value)"></dmx-data-view>
<dmx-data-detail id="data_detailProduct" dmx-bind:data="data_viewProducts.data" key="id"></dmx-data-detail>
<dmx-value id="varImageAction"></dmx-value>
<meta name="ac:route" content="/dashboard/products">
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h2>Products</h2>
        </div>
    </div>
    <div class="row align-items-end mb-4">
        <div class="col-3">
            <p class="mb-0">Choose a Category</p>
            <input id="searchCategory" name="searchCategory" type="text" class="form-control" is="dmx-tagify" mode="select" dmx-bind:data="serverconnectCategories.data.queryCategories" tag-text="name" tag-value="id" min-chars="0">
        </div>
        <div class="col">
            <button id="btnAddProduct" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddProduct" dmx-show="searchCategory.value">Add Product</button>
        </div>
    </div>
    <div class="row" dmx-show="searchCategory.value">
        <div class="col-4">
            <p dmx-hide="data_viewProducts.data.hasItems()">There are no products listed for this category</p>
            <div class="table-responsive" dmx-show="data_viewProducts.data.hasItems()">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="data_viewProducts.data" id="tableRepeatProducts">
                        <tr dmx-on:click="data_detailProduct.select(id)">
                            <td dmx-text="name" dmx-class:bg-primary="(id == data_detailProduct.data.id)" dmx-class:text-light="(id == data_detailProduct.data.id)"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col" dmx-show="data_detailProduct.data">
            <div class="table-responsive">
                <table class="table table-sm">
                    <tbody dmx-generator="bs5table" dmx-populate="data_detailProduct.data">
                        <tr>
                            <th class="w-25">Category</th>
                            <td dmx-text="data_viewCategory.data[0].name"></td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td dmx-text="data_detailProduct.data.name"></td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td dmx-text="data_detailProduct.data.price.formatCurrency('$', '.', ',', 2)"></td>
                        </tr>
                        <tr>
                            <th>Short description</th>
                            <td dmx-text="data_detailProduct.data.short_description"></td>
                        </tr>
                        <tr>
                            <th>Long description</th>
                            <td dmx-text="data_detailProduct.data.long_description"></td>
                        </tr>
                        <tr>
                            <th>Update date</th>
                            <td dmx-text="data_detailProduct.data.update_date"></td>
                        </tr>
                        <tr>
                            <th>Live</th>
                            <td dmx-text="(data_detailProduct.data.live == 1)?'Yes':'No'"></td>
                        </tr>
                        <tr>
                            <th>Featured</th>
                            <td dmx-text="(data_detailProduct.data.featured == 1)?'Yes':'No'"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col">
                    <button id="btnDeleteProduct" class="btn btn-outline-danger">Delete Product</button>
                    <button id="btnEditProduct" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalUpdateProduct">Edit Product</button>

                </div>
            </div>
            <div class="row mt-4">
                <div class="col">
                    <h5>Image</h5>
                    <div id="conditionalImage" is="dmx-if" dmx-bind:condition="data_detailProduct.data.image">
                        <img width="300" height="200" class="img-fluid" dmx-bind:src="'uploads/images/products/'+data_detailProduct.data.id+'/thumbs/'+data_detailProduct.data.image">
                        <button id="btnChangeImage" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalAddImage" dmx-on:click="varImageAction.setValue('Change')">Change Image</button>
                    </div>
                    <button id="btnAddImage" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddImage" dmx-on:click="varImageAction.setValue('Add')" dmx-hide="data_detailProduct.data.image">Add Image</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalAddProduct" is="dmx-bs5-modal" tabindex="-1" dmx-on:hide-bs-modal="serverconnectformAddProduct.reset()">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Product</h5>
            </div>
            <div class="modal-body">
                <form is="dmx-serverconnect-form" id="serverconnectformAddProduct" method="post" action="/api/products/products/upsert" dmx-generator="bootstrap5" dmx-form-type="vertical" dmx-on:success="notifies1.success('The product has been added');serverconnectProducts.load({});modalAddProduct.hide()">
                    <div class="form-group mb-3">
                        <label for="ins_name">Name</label>
                        <input type="text" class="form-control" id="ins_name" name="name" aria-describedby="ins_name_help" placeholder="Enter Name">
                    </div>
                    <input type="hidden" name="category_id" id="ins_category_id" dmx-bind:value="searchCategory.value">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" dmx-on:click="serverconnectformAddProduct.submit()">Add Product</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalUpdateProduct" is="dmx-bs5-modal" tabindex="-1" dmx-on:hide-bs-modal="serverconnectform1.reset()">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Product</h5>
            </div>
            <div class="modal-body">
                <form is="dmx-serverconnect-form" id="frmUpdateProduct" method="post" action="/api/products/products/upsert" dmx-generator="bootstrap5" dmx-form-type="vertical" dmx-populate="data_detailProduct.data" dmx-on:success="notifies1.success('Product has been updated.');serverconnectProducts.load({});modalUpdateProduct.hide()">
                    <input type="hidden" name="id" id="upd_id" dmx-bind:value="data_detailProduct.data.id">
                    <div class="form-group mb-3">
                        <label for="upd_category_id">Category</label>
                        <select id="upd_category_id" class="form-select" name="category_id" dmx-bind:value="data_detailProduct.data.category_id" dmx-bind:options="serverconnectCategories.data.queryCategories" optiontext="name" optionvalue="id">
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="upd_name">Name</label>
                        <input type="text" class="form-control" id="upd_name" name="name" dmx-bind:value="data_detailProduct.data.name" aria-describedby="upd_name_help" placeholder="Enter Name">
                    </div>
                    <div class="form-group mb-3">
                        <label for="upd_price">Price</label>
                        <input type="text" class="form-control" id="upd_price" name="price" dmx-bind:value="data_detailProduct.data.price" aria-describedby="upd_price_help" placeholder="Enter Price">
                    </div>
                    <div class="form-group mb-3">
                        <label for="upd_short_description">Short description</label>
                        <input type="text" class="form-control" id="upd_short_description" name="short_description" dmx-bind:value="data_detailProduct.data.short_description" aria-describedby="upd_short_description_help" placeholder="Enter Short description">
                    </div>
                    <div class="form-group mb-3">
                        <label for="upd_long_description">Long description</label>
                        <textarea id="upd_long_description" name="long_description" dmx-bind:value="data_detailProduct.data.long_description" class="form-control"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <legend class="col-sm-2 col-form-label">Live</legend>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="1" id="upd_live" name="live" dmx-bind:checked="(data_detailProduct.data.live == 1)">
                            <label class="form-check-label" for="upd_live">Live</label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <legend class="col-sm-2 col-form-label">featured</legend>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="1" id="upd_featured" name="featured" dmx-bind:checked="(data_detailProduct.data.featured == 1)">
                            <label class="form-check-label" for="upd_featured">featured</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" dmx-on:click="frmUpdateProduct.submit()">Update Product</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalDeleteProduct" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title">Delete Product</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure that you want to delete {{data_detailProduct.data.name}}? This action cannot be undone</p>
                <form is="dmx-serverconnect-form" id="frmDeleteProduct" method="post" action="/api/products/products/delete" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-populate="data_detailProduct.data" dmx-on:success="notifies1.success('Product has been deleted');serverconnectProducts.load({});modalDeleteProduct.hide()">
                    <input type="hidden" name="id" id="del_id" dmx-bind:value="data_detailProduct.data.id">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" dmx-on:click="frmDeleteProduct.submit()">Delete Product</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalAddImage" is="dmx-bs5-modal" tabindex="-1" dmx-on:hide-bs-modal="fmrAddImage.reset()">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{varImageAction.value}} Image</h5>
            </div>
            <div class="modal-body">
                <form is="dmx-serverconnect-form" id="fmrAddImage" method="post" action="/api/products/products/upsert" dmx-generator="bootstrap5" dmx-form-type="vertical" dmx-populate="data_detailProduct.data" dmx-on:success="notifies1.success('Image has been added');serverconnectProducts.load({});modalAddImage.hide()">
                    <input type="hidden" name="id" id="img_id" dmx-bind:value="data_detailProduct.data.id">
                    <input type="hidden" name="name" id="img_name" dmx-bind:value="data_detailProduct.data.name">
                    <input type="hidden" name="category_id" id="img_category_id" dmx-bind:value="data_detailProduct.data.category_id">
                    <div class="form-group mb-3">
                        <label for="img_image" role="button">Choose an Image</label>
                        <input type="file" class="form-control-file" id="img_image" name="image" hidden>
                    </div>
                </form>
                <div class="row">
                    <div class="col">
                        <img width="120" dmx-bind:src="fmrAddImage.img_image.file.dataUrl">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" dmx-on:click="fmrAddImage.submit()" dmx-bind:disabled="!fmrAddImage.img_image.value">{{varImageAction.value}} Image</button>
            </div>
        </div>
    </div>
</div>